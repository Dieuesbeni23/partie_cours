FUNCTION dot_product(v1, v2);
VAR
    v1 : ARRAY_OF float[i];
    v2 : ARRAY_OF float[i];
BEGIN
    ps :=0;
    FOR i FROM   DO
        ps := ps + (v1[i] * v2[i])
    END_FOR
    RETURN ps;
END

PROCEDURE check_orthogonal(v1, v2)
VAR
    v1 : INTEGER;
    v2 : INTEGER;
BEGIN
    result := dot_product(v1, v2);
    IF (result = 0) THEN
        write("Les deux vecteurs sont orthogonaux");
    ELSE
        write("Les deux vecteurs ne sont pas orthogonaux")
    END_IF
END
